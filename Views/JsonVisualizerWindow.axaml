<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:RequesterMini.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="vm:JsonVisualizerWindowViewModel"
             x:Class="RequesterMini.Views.JsonVisualizerWindow">
    
    <Design.DataContext>
        <vm:JsonVisualizerWindowViewModel/>
    </Design.DataContext>
    
    <ScrollViewer>
        <TextBlock Text="{Binding PrettyJsonValue, Mode=TwoWay}" 
                   FontFamily="Consolas, monospace" 
                   Margin="10" 
                   TextWrapping="Wrap"/>
    </ScrollViewer>
</UserControl>