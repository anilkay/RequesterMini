<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:RequesterMini.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:RequesterMini.Views"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
        x:Class="RequesterMini.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="RequesterMini"
        Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid ColumnDefinitions="250, *">
        <!-- Sidebar -->
        <Border Grid.Column="0" 
                Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" 
                BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                BorderThickness="0,0,1,0">
            <views:OldRequestWindow/>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Column="1" RowDefinitions="Auto, Auto, *" Margin="20">
            
            <!-- Request Bar -->
            <Grid Grid.Row="0" ColumnDefinitions="Auto, *, Auto" Margin="0,0,0,20">
                <ComboBox Grid.Column="0" 
                          ItemsSource="{Binding HttpMethods}" 
                          SelectedItem="{Binding SelectedHttpMethod, Mode=TwoWay}" 
                          Width="100" 
                          Margin="0,0,10,0"
                          VerticalAlignment="Center"/>
                
                <TextBox Grid.Column="1" 
                         Text="{Binding Url}" 
                         Watermark="Enter request URL" 
                         VerticalAlignment="Center"
                         Margin="0,0,10,0"/>
                
                <Button Grid.Column="2" 
                        Classes="primary" 
                        Command="{Binding ClickCommand}" 
                        Content="Send"
                        VerticalAlignment="Center"/>
            </Grid>

            <!-- Request Details (Tabs) -->
            <TabControl Grid.Row="1" Margin="0,0,0,20" Height="250">
                <TabItem Header="Params">
                     <TextBlock Text="Query params editing coming soon..." VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Gray"/>
                </TabItem>
                <TabItem Header="Headers">
                    <Grid RowDefinitions="Auto, *">
                        <Grid Grid.Row="0" ColumnDefinitions="*, Auto" Margin="0,0,0,10">
                            <TextBlock Text="Request Headers" Classes="h2" VerticalAlignment="Center"/>
                            <Button Grid.Column="1" Classes="secondary" Command="{Binding AddHeaderCommand}" Content="+ Add Header"/>
                        </Grid>
                        
                        <ScrollViewer Grid.Row="1">
                            <ItemsControl ItemsSource="{Binding Headers}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid ColumnDefinitions="Auto, *, *, Auto" Margin="0,0,0,5">
                                            <CheckBox Grid.Column="0" IsChecked="{Binding IsEnabled}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                            <TextBox Grid.Column="1" Text="{Binding Key}" Watermark="Key" Margin="0,0,5,0"/>
                                            <TextBox Grid.Column="2" Text="{Binding Value}" Watermark="Value" Margin="5,0,5,0"/>
                                            <Button Grid.Column="3" Classes="danger" Content="âœ•" Command="{Binding RemoveCommand}" Padding="8,5"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </TabItem>
                <TabItem Header="Body">
                    <Grid RowDefinitions="Auto, *">
                        <ComboBox Grid.Row="0" 
                                  ItemsSource="{Binding BodyTypes}" 
                                  SelectedItem="{Binding SelectedBodyType, Mode=TwoWay}" 
                                  Width="150" 
                                  Margin="0,0,0,10"/>
                        <TextBox Grid.Row="1" 
                                 Text="{Binding Body}" 
                                 AcceptsReturn="True" 
                                 Watermark="Enter request body" 
                                 TextWrapping="Wrap"
                                 FontFamily="Consolas, monospace"/>
                    </Grid>
                </TabItem>
            </TabControl>

            <!-- Response Section -->
            <Grid Grid.Row="2" RowDefinitions="Auto, *">
                <Border Grid.Row="0" 
                        Background="{DynamicResource SystemControlBackgroundBaseLowBrush}" 
                        CornerRadius="4" 
                        Padding="10" 
                        Margin="0,0,0,10">
                    <StackPanel Orientation="Horizontal" Spacing="15">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Status:" FontWeight="Bold" Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding ResponseStatusCode}" FontWeight="Bold" Foreground="{DynamicResource SystemControlForegroundAccentBrush}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Finished:" FontWeight="Bold" Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding FinishedTimeUtc}" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Time:" FontWeight="Bold" Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding RequestTime}" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <TabControl Grid.Row="1">
                    <TabItem Header="Raw">
                        <TextBox Text="{Binding ResponseBody, Mode=TwoWay}" 
                                 AcceptsReturn="True" 
                                 IsReadOnly="True" 
                                 TextWrapping="Wrap"
                                 FontFamily="Consolas, monospace"
                                 BorderThickness="0"/>
                    </TabItem>
                    <TabItem Header="Preview">
                        <views:JsonVisulizerWindow/>
                    </TabItem>
                </TabControl>
            </Grid>
        </Grid>
    </Grid>
</Window>
